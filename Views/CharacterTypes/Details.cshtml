@model RPG_Wiki_WebApp.Models.Character.CharacterType

@{
    ViewData["Title"] = "Character Type Details";
}

<h1 class="text-center my-4">🎭 Character Type Details</h1>

<div class="card shadow-lg p-4">
    <div class="card-header bg-primary text-white">
        <h4 class="text-center">Character Type Information</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">Character Type Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
        </dl>
    </div>

    <div class="card-footer d-flex gap-2 justify-content-between">
        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">📝 Edit</a>
            <a asp-action="Index" class="btn btn-secondary">⬅️ Back to List</a>
        </div>
    </div>
</div>
