@model RPG_Wiki_WebApp.Models.Item.Weapon.Weapon

@{
    ViewData["Title"] = "Delete Weapon";
}

<h1 class="text-center text-danger mt-4">⚠️ Delete Weapon</h1>

<div class="card shadow-lg p-4">
    <div class="card-header bg-danger text-white">
        <h4 class="text-center">Are you sure you want to delete this weapon?</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name) (Item Code: @Html.DisplayFor(model => model.ItemCode))</dd>

            <dt class="col-sm-3 font-weight-bold">Item Rarity</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ItemRarity.Name)</dd>

            <dt class="col-sm-3 font-weight-bold">Weapon Type</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.WeaponType.Name)</dd>

            <dt class="col-sm-3 font-weight-bold">Damage</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.MinDamage) - @Html.DisplayFor(model => model.MaxDamage)</dd>

            <dt class="col-sm-3 font-weight-bold">Value</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Value)</dd>
        </dl>
    </div>

    <div class="card-footer d-flex justify-content-between">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">❌ Confirm Delete</button>
        </form>
        <a class="btn btn-secondary" asp-action="Index">⬅️ Cancel</a>
    </div>
</div>
